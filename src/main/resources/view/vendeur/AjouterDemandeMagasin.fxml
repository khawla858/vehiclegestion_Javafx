<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.vehiclegestion.vendeur.controller.AjouterDemandeMagasinController"
            prefHeight="500.0" prefWidth="600.0">

    <VBox spacing="10" alignment="TOP_CENTER" style="-fx-padding:20;">
        <Label text="Demande de création de magasin" style="-fx-font-size:18px; -fx-font-weight:bold;"/>

        <!-- Infos magasin -->
        <TextField fx:id="nomMagasin" promptText="Nom du magasin"/>
        <TextField fx:id="adresse" promptText="Adresse complète"/>
        <TextField fx:id="localisation" promptText="Localisation (ville ou GPS)"/>
        <TextArea fx:id="description" promptText="Description du magasin" prefRowCount="4"/>
        <TextField fx:id="photoProfil" promptText="URL photo/logo (facultatif)"/>

        <!-- Infos vendeur (lecture seule si déjà connu) -->
        <TextField fx:id="nomVendeur" promptText="Nom du vendeur" editable="false"/>
        <TextField fx:id="emailVendeur" promptText="Email du vendeur" editable="false"/>
        <TextField fx:id="telVendeur" promptText="Téléphone" editable="false"/>

        <Button fx:id="btnEnvoyer" text="Envoyer la demande" onAction="#envoyerDemande"/>
    </VBox>

</AnchorPane>
