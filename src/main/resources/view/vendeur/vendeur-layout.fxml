<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.vehiclegestion.vendeur.controller.VendeurLayoutController">

    <!-- NAVBAR -->
    <top>
        <HBox style="-fx-background-color: #2c3e50; -fx-padding: 10;">
            <Label text="Tableau de bord du vendeur" style="-fx-text-fill: white; -fx-font-size: 18px;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Se déconnecter" onAction="#handleLogout"/>
        </HBox>
    </top>

    <!-- SIDEBAR -->
    <left>
        <VBox spacing="10" style="-fx-background-color: #34495e; -fx-padding: 10;">
            <Button text="Dashboard" onAction="#showDashboard"/>
            <Button text="Gérer mes véhicules" onAction="#showVehicleManagement"/>
            <Button text="Demandes d’achat" onAction="#showPurchaseRequests"/>
            <Button text="Historique des ventes" onAction="#showSalesHistory"/>
            <Button text="Profil" onAction="#showProfile"/>
        </VBox>
    </left>

    <!-- CONTENU DYNAMIQUE -->
    <center>
        <AnchorPane fx:id="contentPane"/>
    </center>
</BorderPane>
